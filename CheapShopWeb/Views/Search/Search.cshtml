            @* *@
            @* *@
            @* </div> *@
            @* <Button class="btn btn-lg btn-success" name="filter" type="submit">Filter</Button> *@
        </div>
        <div id="second" class="col-sm-8 col-md-9 col-lg-10">
            @if(Model.list!=null)
            {foreach (var item in Model.list)
            {
                <div class="container-fluid border border-dark">
                    <div class="row">
                        <div class="col-sm-12 col-md-3 border border-danger">
                            <img class="img-fluid mx-auto d-block" src=@item.plink alt=""/>
                        </div>
                        <div class="col-sm-12 col-md-6 border border-primary">
                            <h2>@item.name</h2>
                            <p>Grupė: @item.item_group</p>
                        </div>

                        <div class="col-sm-12 col-md-3">
                            <h2>@item.price</h2>
                            <a href=@item.link class="btn btn-primary">Link</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            }}

